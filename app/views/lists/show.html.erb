
<h1><%= @list.name %></h1>


<div class="movies-grid">
  <% @list.movies.each do |movie| %>
    <% bookmark = @list.bookmarks.find_by(movie_id: movie.id) %>
    <div class="card-trip">
      <% if movie.poster_url.present? %>
        <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="card-trip-image" />
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
          <% if bookmark.present? %>
            <p>Bookmark: <%= bookmark.comment %></p>
          <% end %>
        </div>
        <h2 class="card-trip-pricing">Rating: <%= movie.rating %></h2>
      </div>
    </div>
  <% end %>
</div>










<button type="button" class="btn btn-outline-secondary"><%= link_to "Back to all Lists", lists_path %></button>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
